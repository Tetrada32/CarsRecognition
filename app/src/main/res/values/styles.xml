<resources>



    <style name="ThemeOverlay.Material3.BottomSheetDialog" parent="Base.ThemeOverlay.Material3.BottomSheetDialog"/>
    <style name="ThemeOverlay.Material3.Button" parent=""/>

    <style name="Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense" />

    <style name="CarPlateTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">10dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.PlanRadarWeather.Headline" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="TextAppearance.PlanRadarWeather.Headline2" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="TextAppearance.PlanRadarWeather.Subtitle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="TextAppearance.PlanRadarWeather.Text.Small" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Widget.PlanRadarWeather.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Widget.PlanRadarWeather.TextInput" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

</resources>
